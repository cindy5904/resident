{% extends "base.html.twig" %}

{% block title %} Carte provisoire n°{{ carteProvisoire.id }} {% endblock %}

{% block body %}
{% include "_nav.html.twig" %}

<div>
    <a href="{{ path('carte_provisoire.index')}}"><button class="mt-4 btn btn-outline-info rounded ml-5"> Retour à la liste des cartes provisoires</button></a>
</div>
<div class="container">
    <h1 class="mt-4 text-center"> Carte provisoire {{ carteProvisoire.nom }} {{ carteProvisoire.prenom }}</h1>
    {{ form_start(form) }}
        
        <div class='form-group'>
            {{ form_label(form.civilite) }}
            {{ form_widget(form.civilite) }}
            <div class="form-errors">
                {{ form_errors(form.civilite) }}
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                <div class="form-errors">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom) }}
                <div class="form-errors">
                    {{ form_errors(form.prenom) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.adresse, 'Adresse', {
                    'label_attr': {'class': 'form-label mt-4 text-warning'}})
                }}
                {{ form_widget(form.adresse, {
                    'attr': {'class': 'form-control rounded'}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.numeroAdresse) }}
                {{ form_widget(form.numeroAdresse) }}
                <div class="form-errors">
                    {{ form_errors(form.numeroAdresse) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.immatriculation) }}
                {{ form_widget(form.immatriculation) }}
                <div class="form-errors">
                    {{ form_errors(form.immatriculation) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.delivreePar, 'Délivrée par', {
                    'label_attr': {'class': 'form-label mt-4 text-warning'}})
                }}
                {{ form_widget(form.delivreePar, {
                    'attr': {'class': 'form-control rounded'}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100 mt-4">
        <div class='form-group w-50'>
            {{ form_label(form.carteGrise) }}
            {{ form_widget(form.carteGrise) }}
            <div class="form-errors">
                {{ form_errors(form.carteGrise) }}
            </div>
        </div>
        <div class='form-group w-50'>
            {{ form_label(form.justificatifMoins3Mois) }}
            {{ form_widget(form.justificatifMoins3Mois) }}
            <div class="form-errors">
                {{ form_errors(form.justificatifMoins3Mois) }}
            </div>
        </div>
        </div>
        <div class='form-group'>
            {{ form_label(form.commentaires) }}
            {{ form_widget(form.commentaires) }}
            <div class="form-errors">
                {{ form_errors(form.commentaires) }}
            </div>
        </div>
         <div class="d-flex justify-content-center w-100">
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            
        </div>


        {{ form_end(form) }}
        
        
    </div>
{% endblock %}