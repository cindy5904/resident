{% extends "base.html.twig" %}

{% block title %} Carte provisoire n° {% endblock %}

{% block body %}
{% include "_nav.html.twig" %}
<div class="d-flex justify-content-between">
    <div class="ml-5">
        <a href="{{ path('carte_provisoire')}}"><button class="mt-5 ml-4 btn btn-info rounded text-lowercase btn-cp"> Retour</button></a>
    </div>

    <div class="text-end mr-5">
    <p class="mt-4" style="font-family: 'Poppins', sans-serif; color: #DC9F69;">Rechercher si une carte provisoire a déjà été délivrée</p>
    <div class="d-flex justify-content-end" style="padding: 0">
        <form method="get" action="{{ path('carte_provisoire_recherche') }}">
            {# <label for="nom">Nom:</label> #}
            <input class="rounded px-4 py-1 block" style="border: 2px solid #F5F4F3" type="text" id="nom" name="nom" placeholder="Entrez un nom...">
            <button type="submit" class="rounded px-4 py-1 block" style="border: none; background-image: linear-gradient(to right top, #b1aa96, #b8af9f, #beb5a8, #c3bbb1, #c8c1ba); color: white">Rechercher</button>
        </form>
    </div> 
        
    </div>
</div>

<div class="container">
    <h1 class="mt-4 text-center h2"> Créer une nouvelle carte provisoire</h1>
    {{ form_start(form) }}
        
        <div class='form-group'>
            {{ form_label(form.civilite) }}
            {{ form_widget(form.civilite) }}
            <div class="form-errors">
                {{ form_errors(form.civilite) }}
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                <div class="form-errors">
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom) }}
                <div class="form-errors">
                    {{ form_errors(form.prenom) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.adresse, 'Adresse', {
                    'label_attr': {'class': 'form-label mt-4 text-warning'}})
                }}
                {{ form_widget(form.adresse, {
                    'attr': {'class': 'form-control rounded'}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.numeroAdresse) }}
                {{ form_widget(form.numeroAdresse) }}
                <div class="form-errors">
                    {{ form_errors(form.numeroAdresse) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.immatriculation) }}
                {{ form_widget(form.immatriculation) }}
                <div class="form-errors">
                    {{ form_errors(form.immatriculation) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.delivreePar, 'Délivrée par', {
                    'label_attr': {'class': 'form-label mt-4 text-warning'}})
                }}
                {{ form_widget(form.delivreePar, {
                    'attr': {'class': 'form-control rounded'}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.delivreePar) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100 mt-4">
        <div class='form-group w-50'>
            {{ form_label(form.carteGrise, 'Carte grise (cocher la case si pièce fourni)', {
                    'label_attr': {'class': 'form-label mt-4 text-warning'}}) }}
            {{ form_widget(form.carteGrise) }}
            <div class="form-errors">
                {{ form_errors(form.carteGrise) }}
            </div>
        </div>
        <div class='form-group w-50'>
            {{ form_label(form.justificatifMoins3Mois, 'Justificatif de mois de 3 mois (cocher la case si pièce fourni)',  {
                    'label_attr': {'class': 'form-label mt-4 text-warning'}}) }}
            {{ form_widget(form.justificatifMoins3Mois) }}
            <div class="form-errors">
                {{ form_errors(form.justificatifMoins3Mois) }}
            </div>
        </div>
        </div>
        <div class='form-group'>
            {{ form_label(form.commentaires) }}
            {{ form_widget(form.commentaires) }}
            <div class="form-errors">
                {{ form_errors(form.commentaires) }}
            </div>
        </div>
        
        <div class="d-flex justify-content-center w-100">
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            
        </div>


        {{ form_end(form) }}
        
       
    </div>
{% endblock %}