        </li>
    </ul>
</div>
<div class="d-flex text-center my-5 m-4 gap-5 justify-content-center">
    <div>
        <a href="{{path('app_home')}}" class="btn btn-beige px-4 py-2" style="background: #c8ad7f ; border: none;">Retour</a>
    </div>
    <div>
            <a href="{{path('app_choix_resident')}}" class="btn btn-beige px-4 py-2" style="background: #c8ad7f; border: none">Ok</a>
    </div>
</div>

{% endblock %}
