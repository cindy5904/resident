{% extends "base.html.twig" %}

{% block title %}
	Enregistrement Régie
{% endblock %}

{% block body %}
<div class="container">
	<div class="row mt-3">
		<div class="col-3">
			<a href="{{ path('app_carte_resident')}}">
				<button class="mt-4 btn btn-info rounded px-3 py-2">
					Retour
				</button>
			</a>
		</div>
		<div class="col-6 text-center mr-auto">
			<h1 class="h3 mt-4 mb-5">
				Enregistrement Régie
			</h1>
		</div>
	</div>
	{{ form_start(form) }}
	<div class='w-100 columns mt-3'>
		<div class='form-group'>
			{{ form_label(form.Civilite, 'Civilité', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
			{{ form_widget(form.Civilite,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			<div class="form-errors">
				{{ form_errors(form.Civilite) }}
			</div>
		</div>
	</div>
	<div class='w-100 mt-3'>
		<div class="d-flex justify-content-around w-100">
			<div class='form-group w-50 mr-2'>
				{{ form_label(form.nom, 'Nom', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.nom,  {
                    'attr': {'class': 'form-control rounded'}}) }}
				<div class="form-errors">
					{{ form_errors(form.nom) }}
				</div>
			</div>
			<div class='form-group w-50 ml-2'>
				{{ form_label(form.prenom,  'Prénom', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.prenom,  {
                    'attr': {'class': 'form-control rounded'}}) }}
				<div class="form-errors">
					{{ form_errors(form.prenom) }}
				</div>
			</div>
		</div>
	</div>
	<div class='w-100 mt-3'>
		<div class="d-flex justify-content-around w-100">
			<div class='form-group w-30'>
				{{ form_label(form.numeroAdresse,  'Numéro', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.numeroAdresse,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
			<div class='form-group w-30'>
				{{ form_label(form.numeroAppartement,  'Numero Appartement', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.numeroAppartement,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
			<div class='form-group w-50'>
				{{ form_label(form.adresse, 'Adresse', {
                'label_attr': {'class': 'form-label text-warning'}})
													                 }}
				{{ form_widget(form.adresse,  {
                    'attr': {'class': 'form-control rounded'}})
													                }}
				<div class="form-errors">
					{{ form_errors(form.adresse) }}
				</div>
			</div>
		</div>
	</div>
	<div class="w-100 mt-3">
		<div class="d-flex justify-content-around w-100">
			<div class='form-group w-50 ml-2'>
				{{ form_label(form.marqueVehicule,  'Marque du Véhicule', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.marqueVehicule,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
			<div class='form-group w-50 ml-2'>
				{{ form_label(form.modele,  'Modèle du Véhicule', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.modele,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
			<div class='form-group w-50 ml-2'>
				{{ form_label(form.immatriculation,  'Immatriculation', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.immatriculation,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
		</div>
	</div>
	<div class="w-100 mt-3">
		<div class="d-flex justify-content-around w-100">
			<div class='form-group w-50 ml-2'>
				{{ form_label(form.numeroCarte,  'Numéro de carte', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.numeroCarte,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
			<div class='form-group w-50 ml-2'>
				{{ form_label(form.modeReglement,  'Mode de Réglement :', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.modeReglement,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
		</div>
	</div>
	<div class="d-flex justify-content-center align-items-center w-100">
    <div class='form-group w-50'>
        {{ form_label(form.dateEnvoiCarte) }}
        <div class="input-group date" id="datepicker3">
            {{ form_widget(form.dateEnvoiCarte) }}
            <span class="input-group-append">
                <span class="input-group-text bg-light d-block">
                    <i class="fa fa-calendar"></i>
                </span>
            </span>
        </div>
        <div class="form-errors">
            {{ form_errors(form.dateEnvoiCarte) }}
        </div>
    </div>

    <div class='form-group w-50 ml-5 mt-5'>
        {{ form_label(form.attestationHonneur, 'Attestation sur l\'honneur', {
        'label_attr': {'class': 'form-label text-warning'}}) }}
        {{ form_widget(form.attestationHonneur) }}
    </div>
</div>

         <div class="d-flex justify-content-center">
            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
        </div> 
          

        {{ form_end(form) }}
</div>                
{% endblock %}
