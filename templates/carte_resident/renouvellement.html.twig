                </div>
                <div class='form-check form-check-inline ml-4 mt-3'>
                    {{ form_widget(form.voiePostale) }}
                    {{ form_label(form.voiePostale) }}
                    <div class="form-errors">
                        {{ form_errors(form.voiePostale) }}
                    </div>
                </div>
            </div>

            <div class=" justify-content-around w-100 mt-4">
