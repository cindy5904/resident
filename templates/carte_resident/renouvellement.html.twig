                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateDeMiseEnIncomplet) }}
                    </div>
                </div>
                <div class='form-group w-100 ml-4'>
                    {{ form_label(form.dateDeCompletude) }}
                    <div class="input-group date" id="datepicker1">
                        {{ form_widget(form.dateDeCompletude) }}
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateDeCompletude) }}
                    </div>
                </div>
                <div class='form-group w-100 ml-4'>
                    {{ form_label(form.dateDeReponseAdministre) }}
                    <div class="input-group date" id="datepicker2">
                        {{ form_widget(form.dateDeReponseAdministre) }}
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateDeReponseAdministre) }}
                    </div>
                </div>

            <div class=" justify-content-around w-100 mt-4">
                <div class='form-group w-100 ml-4'>
                    {{ form_label(form.dateCreation) }}
                    <div class="input-group date" id="datepicker3">
                        {{ form_widget(form.dateCreation) }}
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateCreation) }}
                    </div>
                </div>
                <div class='form-group w-100 ml-4'>
                    {{ form_label(form.dateAnDernier) }}
                    <div class="input-group date" id="datepicker4">
                        {{ form_widget(form.dateAnDernier) }}
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateAnDernier) }}
                    </div>
                    <p class="text-danger">Entrer la date à laquelle le résident a été créé l'an dernier</p>
                </div>
            </div>    
                {# <div class='form-group w-100 ml-4'>
                    {{ form_label(form.dateEnvoiCarte) }}
                    <div class="input-group date" id="datepicker3">
                        {{ form_widget(form.dateEnvoiCarte) }}
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateEnvoiCarte) }}
                    </div>
                </div> #}
