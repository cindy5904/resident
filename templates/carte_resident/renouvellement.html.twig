                        'attr': {'class': 'form-control rounded', 'required': true}})
                    }}
                    <div class="form-errors">
                        {{ form_errors(form.modeReglement) }}
                    </div>
                </div>
            </div>
            <div class='form-group'>
                {{ form_label(form.commentaires, "Commentaires",  {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                {{ form_widget(form.commentaires) }}
                <div class="form-errors">
                    {{ form_errors(form.commentaires) }}
                </div>
            </div>
           
        </div>
        <hr style=" border-left: 1px solid lightgray; height: 800px; width: 1px;">

        <div class="container w-50">
            <h2 class="text-primary mt-4 text-center">Suivi de dossier</h2>
            <div class="d-flex flex-column mt-4 ml-2 w-100">
                <div class='form-check form-check-inline ml-4 mt-3'>
                    {{ form_widget(form.attestationHonneur) }}
                    {{ form_label(form.attestationHonneur) }}
                    <div class="form-errors">
                        {{ form_errors(form.attestationHonneur) }}
                    </div>
                </div>
                <div class='form-check form-check-inline ml-4 mt-3'>
                    {{ form_widget(form.demandeCourrier) }}
                    {{ form_label(form.demandeCourrier) }}
                    <div class="form-errors">
