{% extends "base.html.twig" %}

{% block title %} Création d'une nouvelle carte entreprise {% endblock %}

{% block body %}
    <div class="d-flex justify-content-end mr-4">
        <a href="{{ path('entreprise.index')}}"><button class="mt-4 btn btn-outline-info rounded-pill"> Retour à la liste des cartes entreprises</button></a>
    </div>

    <div class="container">
    <h1 class="mt-4 text-center"> Créer une nouvelle carte entreprise</h1>
    {{ form_start(form) }}
        <div class='form-group'>
            {{ form_label(form.denomination, 'Dénomination', {
                'label_attr': {'class': 'form-label mt-4 text-warning'}})
            }}
            {{ form_widget(form.denomination, {
                'attr': {'class': 'form-control rounded', 'required': true}})
            }}
            <div class="form-errors">
                {{ form_errors(form.denomination) }}
            </div>
        </div>
        <div class="d-flex justify-content-around">
        <div class='form-group w-50 mr-2'>
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            <div class="form-errors">
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class='form-group w-50 ml-2'>
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom) }}
            <div class="form-errors">
                {{ form_errors(form.prenom) }}
            </div>
        </div>
        </div>
        <div class="d-flex justify-content-around">
        <div class='form-group w-50 mr-2'>
            {{ form_label(form.marqueVehicule) }}
            {{ form_widget(form.marqueVehicule) }}
            <div class="form-errors">
                {{ form_errors(form.marqueVehicule) }}
            </div>
        </div>
        <div class='form-group w-50 ml-2'>
            {{ form_label(form.modele) }}
            {{ form_widget(form.modele) }}
            <div class="form-errors">
                {{ form_errors(form.modele) }}
            </div>
        </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.immatriculation) }}
                {{ form_widget(form.immatriculation) }}
                <div class="form-errors">
                    {{ form_errors(form.immatriculation) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.vehiculeVert, 'Type de véhicule vert', {
                    'label_attr': {'class': 'form-label mt-2 text-warning'}})
                }}
                {{ form_widget(form.vehiculeVert, {
                    'attr': {'class': 'form-control rounded', 'required': true}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.vehiculeVert) }}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around w-100">
            <div class='form-group w-50 mr-2'>
                {{ form_label(form.montant, 'Montant', {
                    'label_attr': {'class': 'form-label mt-2 text-warning'}})
                }}
                {{ form_widget(form.montant, {
                    'attr': {'class': 'form-control rounded', 'required': true}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.montant) }}
                </div>
            </div>
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.modeReglement, 'Mode de réglement', {
                    'label_attr': {'class': 'form-label mt-2 text-warning'}})
                }}
                {{ form_widget(form.modeReglement, {
                    'attr': {'class': 'form-control rounded', 'required': true}})
                }}
                <div class="form-errors">
                    {{ form_errors(form.modeReglement) }}
                </div>
            </div>
        </div>
        <div class='form-group w-50'>
                    {{ form_label(form.dateCreation) }}
                    <div class="input-group date" id="datepicker3">
                        {{ form_widget(form.dateCreation) }}
                        <span class="input-group-append">
                            <span class="input-group-text bg-light d-block">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                    </div>
                    <div class="form-errors">
                        {{ form_errors(form.dateCreation) }}
                    </div>
                </div>
        
       
        
            {# <div class='form-group w-50 mr-2'>
                {{ form_label(form.numeroCarte) }}
                {{ form_widget(form.numeroCarte) }}
                <div class="form-errors">
                    {{ form_errors(form.numeroCarte) }}
                </div>
            </div>
            <div class='form-check w-50 form-check-inline ml-4 mt-4'>
                {{ form_widget(form.carteGrise) }}
                {{ form_label(form.carteGrise) }}
                <div class="form-errors">
                    {{ form_errors(form.carteGrise) }}
                </div>
            </div> #}
    
        
        <div class='form-group'>
            {{ form_label(form.commentaires) }}
            {{ form_widget(form.commentaires) }}
            <div class="form-errors">
                {{ form_errors(form.commentaires) }}
            </div>
        </div>
        <div class="d-flex justify-content-center w-100">
            <div class="form-group mt-4">
                {{ form_row(form.submit) }}
            </div>
            
        </div>


        {{ form_end(form) }}
    </div>
{% endblock %}