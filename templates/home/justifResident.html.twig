    <div>
        <a href="{{path('app_choice')}}" id="bouton"class="btn px-5 py-2 rounded">Retour</a>
    </div>
    <div>
        <a href="{{path('app_choix_resident')}}" id="bouton" class="btn px-5 py-2 rounded">Ok</a>
    </div>
</div>

