{% extends 'base.html.twig' %}

{% block body %}
{% include "_navPro.html.twig" %}
<form class="form-inline mt-5 d-flex justify-content-center" method="get" action="{{ path('regie_register.entreprise') }}">
    <div class="form-group">
        <input class="form-control" type="text" name="search" value="{{ searchTerm }}" placeholder="Rechercher par nom">
    </div>
    <button class="btn btn-info" type="submit">Rechercher</button>
</form>
{% if entreprises %}
    <div class="container h-100 w-100">
        <div class="d-flex justify-content-end">
            <a href="{{ path('profession_liberale.index')}}">
                <button class="mt-4 btn btn-outline-info rounded-pill">
                    Retour à la liste</button>
            </a>
		</div>
        <h1 class="mt-4 text-center h3">
				Regie Entreprise
                {{ entreprises.denomination }}
				{{ entreprises.nom }}
				{{ entreprises.prenom }}</h1>
			{{ form_start(form) }}
            <div class="container h-100 w-100 d-flex mt-4">
                <div class="container w-100">
                    <div class='form-group'>
                        {{ form_label(form.denomination, 'Civilité', {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
						{{ form_widget(form.denomination, { 'attr': {'class': 'form-control rounded'}}
						) }}
						<div class="form-errors">
							{{ form_errors(form.denomination) }}
						</div>
                    </div>
                    <div class="d-flex justify-content-around w-100">
                    <div class='form-group w-50'>
                        {{ form_label(form.nom, 'Nom', {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'hidden-border-on-print'}})}}
                        <div class="form-errors">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class='form-group w-50 ml-2'>
                        {{ form_label(form.prenom, 'Prénom', {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                        {{ form_widget(form.prenom) }}
                        <div class="form-errors">
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                </div>

             <div class="d-flex justify-content-around w-100">
                <div class='form-group w-50 mr-2'>
                    {{ form_label(form.marqueVehicule, 'Marque du Véhicule',  {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                    {{ form_widget(form.marqueVehicule) }}
                    <div class="form-errors">
                        {{ form_errors(form.marqueVehicule) }}
                    </div>
                </div>
                <div class='form-group w-50 ml-2 mr-2'>
                    {{ form_label(form.modele, 'Modèle',  {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                    {{ form_widget(form.modele) }}
                    <div class="form-errors">
                        {{ form_errors(form.modele) }}
                    </div>
                </div>
            
            <div class='form-group w-50 ml-2'>
                {{ form_label(form.immatriculation, "Immatriculation",  {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
                {{ form_widget(form.immatriculation) }}
                <div class="form-errors">
                    {{ form_errors(form.immatriculation) }}
                </div>
            </div>
        </div> 

        <div class="d-flex justify-content-around w-100">
                <div class='form-group w-50 mr-2'>
                    {{ form_label(form.montant, 'Montant',  {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                    {{ form_widget(form.montant) }}
                    <div class="form-errors">
                        {{ form_errors(form.montant) }}
                    </div>
                </div>
                <div class='form-group w-50 mr-2'>
                    {{ form_label(form.modeReglement, 'Mode de réglement',  {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                    {{ form_widget(form.modeReglement) }}
                    <div class="form-errors">
                        {{ form_errors(form.modeReglement) }}
                    </div>
                </div>
        </div>
             <div class="d-flex justify-content-around w-100">
                <div class='form-group w-50 ml-2 mr-2'>
                    {{ form_label(form.numeroCarte, 'Numéro de carte',  {
                        'label_attr': {'class': 'form-label text-warning'}}) }}
                    {{ form_widget(form.numeroCarte) }}
                    <div class="form-errors">
                        {{ form_errors(form.numeroCarte) }}
                    </div>
                </div>
            
           <div class='form-group w-50 mr-2 ml-2'>
            {{ form_label(form.dateCreation, 'Date de création', {
            'label_attr': {'class': 'form-label text-warning'}}) }}
            <div class="input-group date" id="datepicker3">
                {{ form_widget(form.dateCreation) }}
                <span class="input-group-append">
                    <span class="input-group-text bg-light d-block">
                        <i class="fa fa-calendar"></i>
                    </span>
                </span>
            </div>
            <div class="form-errors">
                {{ form_errors(form.dateCreation) }}
            </div>
    </div>
        </div> 
        <div class='w-100 mt-3'>
			<div class="form-group">
				{{ form_label(form.commentaires,  'Commentaires', {
                    'label_attr': {'class': 'form-label text-warning'}}) }}
				{{ form_widget(form.commentaires,  {
                    'attr': {'class': 'form-control rounded'}}) }}
			</div>
		</div>
         <div class="d-flex justify-content-center">
                <div class="form-group">
                    {{ form_row(form.submit) }}
                </div>
            </div>

     </div>
     {{ form_end(form) }}
    </div>

            
            
    </div>
    {% elseif searchTerm %}
<div class='text-center mt-5'>
	<p>Aucun résident trouvé pour "{{ searchTerm }}".</p>
	<a href="{{path('app_choix_pro')}}" class="btn btn-info">Revenir à la page d'accueil</a>
</div>

{% endif %}

{% endblock %}