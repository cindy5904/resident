{% extends 'base.html.twig' %}

{% block body %}
{% include "_nav.html.twig" %}
		<div class="container h-100 w-100">
			<div class="d-flex justify-content-end">
				<a href="{{ path('app_carte_resident')}}">
					<button class="mt-4 btn btn-outline-info rounded-pill">
						Retour à la liste des résidents</button>
				</a>
			</div>
			<h1 class="mt-4 text-center">
				Regie résident
				{{ residents.nom }}
				{{ residents.prenom }}</h1>
			{{ form_start(form) }}
			<div class="container h-100 w-100 d-flex mt-4">
				<div class="container w-100">
					<div class='form-group w-50'>
						{{ form_label(form.Civilite) }}
						{{ form_widget(form.Civilite, { 'attr': {'class': 'form-control rounded'}}
						) }}
						<div class="form-errors">
							{{ form_errors(form.Civilite) }}
						</div>
					</div>
				<div class="d-flex justify-content-around w-100">
                    <div class='form-group w-50'>
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'hidden-border-on-print'}})}}
                        <div class="form-errors">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    <div class='form-group w-50 ml-2'>
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                        <div class="form-errors">
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-around w-100">
                    <div class='form-group w-30'>
                        {{ form_label(form.numeroAdresse) }}
                        {{ form_widget(form.numeroAdresse) }}
                        <div class="form-errors">
                            {{ form_errors(form.numeroAdresse) }}
                        </div>
                    </div>
                    <div class='form-group w-30 ml-2'>
                        {{ form_label(form.numeroAppartement) }}
                        {{ form_widget(form.numeroAppartement) }}
                        <div class="form-errors">
                            {{ form_errors(form.numeroAppartement) }}
                        </div>
                    </div>
                    <div class='form-group w-50'>
                        {{ form_label(form.adresse, 'Adresse', {
                    'label_attr': {'class': 'form-label text-warning'}})
                                                                }}
                        {{ form_widget(form.adresse, {
                    'attr': {'class': 'form-control rounded', 'required': true}})
                                                                }}
                        <div class="form-errors">
                            {{ form_errors(form.adresse) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-around w-100">
                    <div class='form-group w-50'>
                        {{ form_label(form.marqueVehicule) }}
                        {{ form_widget(form.marqueVehicule) }}
                        <div class="form-errors">
                            {{ form_errors(form.marqueVehicule) }}
                        </div>
                    </div>
                    <div class='form-group w-50 ml-2'>
                        {{ form_label(form.modele) }}
                        {{ form_widget(form.modele) }}
                        <div class="form-errors">
                            {{ form_errors(form.modele) }}
                        </div>
                    </div>
                    <div class='form-group w-50 ml-2'>
                        {{ form_label(form.immatriculation) }}
                        {{ form_widget(form.immatriculation) }}
                        <div class="form-errors">
                            {{ form_errors(form.immatriculation) }}
                        </div>
                    </div>
				</div>
				<div class="d-flex justify-content-around w-100">
                    <div class='form-group w-50'>
                    {{ form_label(form.modeReglement, 'Mode de réglement', {
                    'label_attr': {'class': 'form-label text-warning'}})
                    }}
                    {{ form_widget(form.modeReglement, {
                    'attr': {'class': 'form-control rounded', 'required': true}})
                        }}
                        <div class="form-errors">
                            {{ form_errors(form.modeReglement) }}
                        </div>
                    </div>
                    <div class='form-group w-50 ml-2'>
                        {{ form_label(form.numeroCarte) }}
                        {{ form_widget(form.numeroCarte) }}
                        <div class="form-errors">
                            {{ form_errors(form.numeroCarte) }}
                        </div>
                    </div>
				</div>
                <div class='d-flex justify-content-around w-100'>
                    <div class='form-group w-50'>
                        {{ form_label(form.DateEnvoiCarte) }}
                        <div class="input-group date" id="datepicker2">
                            {{ form_widget(form.DateEnvoiCarte) }}
                            <span class="input-group-append">
                                <span class="input-group-text bg-light d-block">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </span>
                        </div>
                        <div class="form-errors">
                            {{ form_errors(form.DateEnvoiCarte) }}
                        </div>
                    </div>
                    <div class='form-group w-50 ml-4'>
                        {{ form_label(form.dateCreation) }}
                        <div class="input-group date" id="datepicker3">
                            {{ form_widget(form.dateCreation) }}
                            <span class="input-group-append">
                                <span class="input-group-text bg-light d-block">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </span>
                        </div>
                        <div class="form-errors">
                            {{ form_errors(form.dateCreation) }}
                        </div>
                    </div>
			    </div>
			{# <hr style=" border-left: 1px solid lightgray; height: 1050px; width: 1px;"> #}
                <div class="container w-20">
                    <div class="d-flex flex-column mt-4">
                        <div class='form-check form-check-inline mt-3'>
                            {{ form_widget(form.attestationHonneur) }}
                            {{ form_label(form.attestationHonneur) }}
                            <div class="form-errors">
                                {{ form_errors(form.attestationHonneur) }}
                            </div>
                        </div>
                    </div>
                </div>
		</div>

	</div>
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    {{ form_row(form.submit) }}
                </div>
            </div>

	{{ form_end(form) }}
</div>{% endblock %}
